<!-- Section File Name: custom-video.liquid -->
<!-- Section Name: Background Video -->
<!-- Presets Name: Background Video -->
<div id="sid-{{ section.id }}">
  <div class="video_section">
    <div class="video_container">
      <video autoplay muted loop id="myVideo">
        <source
          src="{% if collection.metafields.custom.background_video != blank %}{{ collection.metafields.custom.background_video | file_url }}{% else %}{{ section.settings.video_link }}{% endif %}"
          type="video/mp4"
        >
      </video>
    </div>
  </div>
</div>

<style>
  #sid-{{section.id}} .video_section{
    width: 100%;
    position: relative;
  }
  #sid-{{section.id}} .video_container{
    {% if section.settings.full_width == false %}
    max-width: {{section.settings.maxWidth}}px;
    {% endif %}
    width: 100%;
    margin: 0 auto;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    display: flex;
  }

  #sid-{{section.id}} {
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    margin: 0 auto;
  }
  @media only screen and (min-width: 1600px){
    #sid-{{section.id}} video#myVideo {
      width: 100%;
    }
  }
  @media only screen and (max-width: 767px){
    #sid-{{section.id}} .video_container{
      padding: {{ section.settings.padding_top_mb }}px {{ section.settings.padding_right_mb }}px {{ section.settings.padding_bottom_mb }}px {{ section.settings.padding_left_mb }}px;
    }
  }
</style>
{% schema %}
{
  "name": "Background Video",
  "settings": [
{
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
