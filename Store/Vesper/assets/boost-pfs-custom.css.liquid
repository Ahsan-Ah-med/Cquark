/* Boost S 147428 */
ul.boost-pfs-filter-filter-dropdown {
    display: block !important;
}
.boost-pfs-filter-top-sorting button {
  display: none;
}
li.boost-pfs--dflex {
    display: flex;
    align-items: center;
    margin: 7px 0 6px;
    line-height: 24px;
}
span.boost-pfs--checkbox {
    display: inline-block;
    position: relative;
    width: 15px;
    height: 15px;
    border: 1px solid rgba(0,0,0,.2);
    margin-right: 5px;
}
.boost-pfs-filter-filter-dropdown li a {
    font-size: 12px;
    color: #000;
    font-weight: 400;
    font-family: Libre Franklin,sans-serif;
}
span.boost-pfs--checkbox.active::before {
  content: '';
  width: 5.5px;
  height: 9px;
  position: absolute;
  top: 45%;
  left: 50%;
  border: 2px solid #000;
  transform: translate(-50%, -50%) rotate(45deg);
  -webkit-transform: translate(-50%, -50%) rotate(45deg);
  border-top: none;
  border-left: none;
}
.sort-by--label {
    position: relative;
    cursor: pointer;
}
.sort-by--label::before {
    content: '+';
    right: 13px;
    width: 0;
    font-size: 25px;
    position: absolute;
    color: #c1c1c1;
    font-weight: 400;
    top: 50%;
    transform: translateY(-50%);
}
.sort-by--label.active::before {
    border: none;
    content: "\2012";
}
.boost-pfs-filter-top-sorting {
    max-height: 0;
    overflow: hidden;
    transition: all 100ms;
}
.boost-pfs-filter-top-sorting.active {
    max-height: 220px;
    overflow: initial;
    overflow-y: auto;
    overflow-x: hidden;
    display: block;
}
.boost-pfs-filter-top-sorting::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgb(0 0 0 / 30%);
}
.boost-pfs-filter-top-sorting::-webkit-scrollbar-thumb {
    background-color: #777;
}
.boost-pfs-filter-top-sorting::-webkit-scrollbar {
    width: 4px;
}
@media (max-width: 767px) {
  .sort-by--label {
    display: block;
  }
  .sort-by--label::before {
    display: none;
  }
  .boost-pfs-filter-top-sorting {
    position: absolute;
    display: none;
    z-index: 999;
    background: #fff;
    width: 98vw;
    left: -9px;
    border: 1px solid #eee;
    padding: 20px 10px;
    top: 35px;
  }
}
/* END Boost S 147428 */